<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="pmgusPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.github.viniciussoaresti.pmgus.negocio.Arma</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.Endereco</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.Municipio</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.Ocorrencia</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.TipoDroga</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.UnidadeDroga</class>
    <class>com.github.viniciussoaresti.pmgus.negocio.Encaminhamentos</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pmgus?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="ifpe"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
